include ./mixin/mixin.jade
extends base/base.jade

block titleDocument
	title Home

block section
	section.mgb-20.carousel.slide(id="myCarousel", data-ride="carousel")
		//indicators
		ol.carousel-indicators
			li.active(data-target="#myCarousel" data-slide-to="0")
			li(data-target="#myCarousel" data-slide-to="1")
		//wrapper
		.carousel-inner(role="listbox")
			.item.active
				img(src="assets/images/slider1.jpg", alt="")
			.item
				img(src="assets/images/slider2.jpg", alt="")
	.container
		.row
			.col-md-5
				img(src="assets/images/banner1.jpg", alt="")
			.col-md-7
				img(src="assets/images/banner2.jpg", alt="")
		
		+opcionesnav('blog')
		.row
			+ofertas('assets/images/a1.jpg')
			+ofertas('assets/images/b1.jpg')
			+ofertas('assets/images/c1.jpg')
			+ofertas('assets/images/d1.jpg')
	section#client.pd-20
		.container-fluid.pd-20
			.row
				.col-md-2
					img(src="assets/images/client1.jpg", alt="")
				.col-md-2
					img(src="assets/images/client2.jpg", alt="")
				.col-md-2
					img(src="assets/images/client3.jpg", alt="")
				.col-md-2
					img(src="assets/images/client4.jpg", alt="")
				.col-md-2
					img(src="assets/images/client5.jpg", alt="")
				.col-md-2
					img(src="assets/images/client6.jpg", alt="")
	.container
		+opcionesnav('blog')

